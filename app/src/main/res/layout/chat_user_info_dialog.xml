<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/round_corner_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/im_user_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_55"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/im_user_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="关注:0" />

            <TextView
                android:id="@+id/im_user_followed"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝:0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_border_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_11"
                android:paddingRight="@dimen/dimen_11">

                <TextView
                    android:id="@+id/im_user_feed_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/color_686B89"

                    android:textSize="@dimen/text_size20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="动态"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_border_bg"
                android:orientation="vertical"

                android:paddingLeft="@dimen/dimen_11"
                android:paddingRight="@dimen/dimen_11">

                <TextView
                    android:id="@+id/im_user_activity_count"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/color_686B89"

                    android:textSize="@dimen/text_size20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="活动"


                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_11"
                android:paddingRight="@dimen/dimen_11">

                <TextView
                    android:id="@+id/im_user_focus_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/color_686B89"
                    android:textSize="@dimen/text_size20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="关注"

                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_21"
            android:background="@drawable/avatar_bottom_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/im_action_page"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14"
                android:paddingBottom="@dimen/dimen_14"
                android:text="主页"
                android:textColor="@color/color_3240DB"
                android:textSize="@dimen/text_size16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/im_action_focus"

                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14"

                android:paddingBottom="@dimen/dimen_14"
                android:text="关注"
                android:textColor="@color/color_3240DB"
                android:textSize="@dimen/text_size16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/im_action_kick"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14"
                android:paddingBottom="@dimen/dimen_14"
                android:text="移除本群"
                android:textColor="@color/color_3240DB"
                android:textSize="@dimen/text_size16"
                android:textStyle="bold"

                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/im_user_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/im_user_avatar"
            android:layout_width="@dimen/dimen_93"
            android:layout_height="@dimen/dimen_93" />
    </LinearLayout>
</RelativeLayout>

