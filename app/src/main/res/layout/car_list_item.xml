<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/car_info_lay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wallet_item_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/number_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:textColor="@color/color_090909"
                android:textSize="@dimen/sp_23" />

            <TextView
                android:id="@+id/car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/me_car_info_bg"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="车辆品牌"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="130dp"
            android:layout_height="62dp"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/defualt_car_icon" />

    </RelativeLayout>


</LinearLayout>