<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/im_group_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_group_avatar"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_25"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_group" />

        <LinearLayout
            android:id="@+id/group_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:paddingStart="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/im_group_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginEnd="@dimen/dimen_1"
                android:text="北京"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/text_size12" />

            <TextView
                android:id="@+id/im_group_car_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="@dimen/dimen_4"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="宝马七系"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/text_size12" />
        </LinearLayout>

        <TextView
            android:id="@+id/im_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="阿迪力康师傅"
            android:textColor="@color/color_333333"

            android:textSize="@dimen/dimen_16" />

        <com.ctb_open_car.view.TagView
            android:id="@+id/im_group_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_12"
            app:tagview_HorizontalSpace="@dimen/dimen_7"
            app:tagview_VerticalSpace="@dimen/dimen_5"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

