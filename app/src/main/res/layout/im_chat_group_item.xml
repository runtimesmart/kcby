<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/im_my_group_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/color_FAFCFF"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/im_group_avatar"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_10"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_group_avatar"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginBottom="@dimen/dimen_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/im_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大田仔群"
            android:textColor="@color/color_4A4A4A"
            android:textSize="@dimen/text_size16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/im_reminder_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【有人@我】"
                android:textColor="@color/color_F95E59"
                android:visibility="gone"
                android:textSize="@dimen/text_size13" />

            <TextView
                android:id="@+id/im_group_last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_30"
                android:text="今天晚上出去聚餐，有去的吗？今天晚今天晚上出去聚餐上出去聚餐"
                android:textColor="@color/color_B6B9C2"
                android:textSize="@dimen/text_size13" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/im_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_20"
        android:background="@drawable/round_green_bg"
        android:text="999+"
        android:textColor="@android:color/white" />

</RelativeLayout>