<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poi_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <ImageView
        android:id="@+id/poi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/poi_loc" />

    <LinearLayout
        android:id="@+id/poi_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_toRightOf="@id/poi_icon"
        android:paddingEnd="@dimen/dimen_35"

        android:orientation="vertical">

        <TextView
            android:id="@+id/poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天安门东"
            android:textSize="@dimen/text_size17" />

        <TextView
            android:id="@+id/poi_loc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <ImageView
        android:id="@+id/navi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/poi_navi_icon" />

    <ImageView
        android:id="@+id/navi_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:src="@drawable/icon_edit"
        android:visibility="gone" />
</RelativeLayout>