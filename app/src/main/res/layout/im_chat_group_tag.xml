<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/im_group_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_15"
    android:layout_marginEnd="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_10"
    android:background="@color/color_white"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/im_group_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/icon_blue_indicator"
            android:drawableEnd="@drawable/icon_car"
            android:drawablePadding="@dimen/dimen_10"
            android:text="热门推荐"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size17" />

        <TextView
            android:id="@+id/im_group_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/icon_blue_arrow"
            android:drawablePadding="@dimen/dimen_10"

            android:text="更多"
            android:textColor="@color/color_B5B5B5"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>
</LinearLayout>
