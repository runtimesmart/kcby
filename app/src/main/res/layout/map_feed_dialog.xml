<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14"
        android:layout_marginBottom="@dimen/dimen_14">

        <TextView
            android:id="@+id/ellipsize_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size17"
            android:textColor="@color/color_484848"
            android:layout_centerInParent="true"
            android:text="此区域共有15条动态" />

        <ImageView
            android:id="@+id/feed_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_14"
            android:layout_centerVertical="true"
            android:src="@drawable/close_icon" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_feed_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>